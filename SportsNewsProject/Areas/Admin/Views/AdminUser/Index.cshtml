
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/MainLayout.cshtml";
}

@model List<SportsNewsProject.Models.VM.AdminUserVM>


<div class=" table-responsive">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">Authors</h4>
                <p class="card-category">All authors of this page</p>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover">
                    <thead class="text-info">
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>EMail</th>
                            <th>Roles</th>
                        </tr>
                    </thead>
                    <tbody class="table_body">
                        @foreach (var item in Model)
                        {
                            <tr id="@item.ID" class="text-center">
                                <td>@item.ID</td>
                                <td class="name">@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.EMail</td>
                                @*<td>@item.Roles</td>*@
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>