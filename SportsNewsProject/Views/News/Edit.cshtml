
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@model SportsNewsProject.Models.VM.NewsVM

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Edit Article</h4>
                <p class="card-category">Edit an article</p>
            </div>
            <div class="card-body">
                <form action="/News/Edit/" method="post" enctype="multipart/form-data">

                    @await Html.PartialAsync("Partial/NewsForm")
                    @Html.HiddenFor(q => q.ID)

                    <button type="submit" class="btn btn-primary pull-right ">Edit Article</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>
