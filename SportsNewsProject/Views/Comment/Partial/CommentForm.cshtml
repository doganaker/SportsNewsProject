@model SportsNewsProject.Models.VM.CommentVM

<style>
    .field-validation-error {
        color: red;
    }
</style>

<div class="row">
    <div class="col-md-3">
        <div class="form-group">
            @Html.LabelFor(q => q.NewsID, new { @class = "bmd-label-floating" })
            @Html.TextBoxFor(q => q.NewsID, new { @class = "form-control" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            @Html.LabelFor(q => q.UserID, new { @class = "bmd-label-floating" })
            @Html.TextBoxFor(q => q.UserID, new { @class = "form-control" })
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(q => q.Content, new { @class = "bmd-label-floating" })
            @Html.TextBoxFor(q => q.Content, new { @id = "editor1" })
            <script>
                ClassicEditor
                    .create(document.querySelector('#editor1'))
                    .then(editor => {
                        console.log(editor);
                    })
                    .catch(error => {
                        console.error(error);
                    });
            </script>
        </div>
    </div>

</div>

