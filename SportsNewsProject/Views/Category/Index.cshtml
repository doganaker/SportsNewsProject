
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@model List<SportsNewsProject.Models.VM.CategoryVM>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Simple Table</h4>
                        <p class="card-category"> Here is a subtitle for this table</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                <th>
                                    ID
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    UpperCategoryId
                                </th>
                                <th>
                                    Adddate
                                </th>
                                <th>
                                    Action
                                </th>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr id="@item.ID">
                                            <td>
                                                @item.ID
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>
                                            <td class="text-primary">
                                                @item.UpperCategoryId
                                            </td>
                                            <td>
                                                @item.Adddate
                                            </td>
                                            <td>
                                                <a href="/Category/Edit/@item.ID"><button class="btn btn-outline-success">Edit</button></a>
                                                <button class="btn btn-outline-danger delete" id="@item.ID">Delete</button> 
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>            
        </div>
    </div>
</div>

<script>

    $(document).on("click", ".delete", function () {

        let id = $(this).attr("id")

        $.ajax({
            url : "/Category/Delete",
            type : "POST",
            data : { id: id },
            success : function (msg) {
                alert(msg);
                $("#" + id).fadeOut();
            },
            error : function (err) {
                alert("Category Deleting Failed!");
            }
        })
    })
</script>