
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SportsNewsProject.Models.VM.MainBaseVM

@if (ViewBag.emptycontrol == "no")
{
    <section id="feature_category_section" class="feature_category_section category_page section_wrapper">
        <div class="container">

            <div class="row">
                <div class="col-md-9">

                    <div class="row">
                        @for (int i = 0; i < Model.news.Count; i++)
                        {
                            <div class="col-md-6">
                                <div class="feature_news_item">
                                    <div class="item">
                                        <div class="item_wrapper">
                                            <div class="item_img">
                                                <a href="/haber/@Model.news[i].ID/@UrlHelpers.FriendlyUrl(Model.news[i].Title)"><img class="img-responsive" src="/mainsite/assets/img/img-category.jpg" alt="Chania"></a>
                                            </div> <!--item_img-->
                                            <div class="item_title_date">
                                                <div class="news_item_title">
                                                    <h2><a href="/haber/@Model.news[i].ID/@UrlHelpers.FriendlyUrl(Model.news[i].Title)">@Model.news[i].Title</a></h2>
                                                </div>
                                                <div class="item_meta">@Model.news[i].AddDate.ToString("dd MMM yyyy"), by:<a href="/yazar/@Model.news[i].AuthorID/@UrlHelpers.FriendlyUrl(Model.news[i].Author?.Name)">@Model.news[i].Author.Name</a></div>
                                            </div><!--item_title_date-->
                                        </div> <!--item_wrapper-->
                                        <div class="item_content">
                                            @Model.news[i].SubTitle.Substring(0, 15) ...
                                        </div>

                                    </div><!--item-->
                                </div><!--feature_news_item-->
                            </div><!--col-md-6-->

                        }

                    </div><!--row-->
                </div><!--col-md-9-->
                <div class="col-md-3">

                    <div class="tab sitebar">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#1" data-toggle="tab">Latest</a></li>
                            <li><a href="#2" data-toggle="tab">Populer</a></li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane active" id="1">
                                @foreach (var item in Model.news)
                                {
                                    <div class="media">
                                        <div class="media-left">
                                            <a href="/haber/@item.ID/@UrlHelpers.FriendlyUrl(item.Title)"><img class="media-object" src="/mainsite/assets/img/img-list.jpg" alt="Generic placeholder image"></a>
                                        </div><!--media-left-->
                                        <div class="media-body">
                                            <h4 class="media-heading"><a href="/haber/@item.ID/@UrlHelpers.FriendlyUrl(item.Title)">@item.Title</a></h4>
                                            <div class="item_meta">@item.AddDate.ToString("dd MMM yyyy")</div>
                                        </div><!--media-body-->
                                    </div><!--media-->

                                }
                            </div><!--tab-pane-->

