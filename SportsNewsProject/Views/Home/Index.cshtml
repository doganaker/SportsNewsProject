                                                                <div class="news_item_title">
                                                                    <h2><a href="/NewsDetail/Index/@item.News[i].ID">@item.News[i].Title</a></h2>
                                                                </div><!--news_item_title-->
                                                                <div class="item_meta">@item.News[i].AddDate.ToString("dd MMM yyyy"), by:<a href="/AuthorPage/Author/@item.News[i].AuthorID">@item.News[i].Author?.Name</a></div>
                                                            </div><!--item_title_date-->
                                                        </div><!--item_wrapper-->
                                                        <div class="item_content">
                                                            @item.News[i].SubTitle
                                                        </div><!--item_content-->

                                                    </div><!--feature_news_item-->
                                                </div><!--col-md-7-->

                                            }
                                            else
                                            {
                                                <div class="col-md-5">
                                                    <div class="media_wrapper">
                                                        <div class="media">
                                                            <div class="media-left">
                                                                <a href="#"><img class="media-object" src="/mainsite/assets/img/img-list.jpg" alt="Generic placeholder image"></a>
                                                            </div><!--media-left-->
