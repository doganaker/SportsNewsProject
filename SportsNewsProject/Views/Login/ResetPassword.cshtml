
@model SportsNewsProject.Models.VM.ResetPasswordVM

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Reset Password</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/mainsite/loginregister/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/mainsite/loginregister/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/mainsite/loginregister/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/mainsite/loginregister/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/mainsite/loginregister/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/mainsite/loginregister/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/mainsite/loginregister/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/mainsite/loginregister/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/mainsite/loginregister/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/mainsite/loginregister/css/util.css">
    <link rel="stylesheet" type="text/css" href="/mainsite/loginregister/css/main.css">
    <!--===============================================================================================-->
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <form class="login100-form validate-form flex-sb flex-w" method="post" action="/Login/Reset">
                    <span class="login100-form-title p-b-32">
                        Reset Password
                    </span>

                    <span class="txt1 p-b-11">
                        Password
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Lütfen şifrenizi giriniz!">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        @Html.PasswordFor(q => q.Password, new { @class = "input100", @name = "pass" })
                        <span class="focus-input100"></span>
                    </div>


                    <span class="txt1 p-b-11">
                        Confirm Password
                    </span>
                    <div class="wrap-input100 validate-input m-b-12" data-validate="Lütfen şifrenizi giriniz!">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        @Html.PasswordFor(q => q.ConfirmPassword, new { @class = "input100", @name = "confpass" })
                        <span class="focus-input100"></span>
                        @Html.ValidationMessageFor(q => q.ConfirmPassword)
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Reset
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="/mainsite/loginregister/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="/mainsite/loginregister/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="/mainsite/loginregister/vendor/bootstrap/js/popper.js"></script>
    <script src="/mainsite/loginregister/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="/mainsite/loginregister/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="/mainsite/loginregister/vendor/daterangepicker/moment.min.js"></script>
    <script src="/mainsite/loginregister/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="/mainsite/loginregister/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="/mainsite/loginregister/js/main.js"></script>

</body>
</html>