
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@model List<SportsNewsProject.Models.VM.AuthorVM>

<div class=" table-responsive">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">Authors</h4>
                <p class="card-category">All authors of this page</p>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover">
                    <thead class="text-info">
                    <th>ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>EMail</th>
                    <th>Phone</th>
                    <th>Addate</th>
                    <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="@item.ID">
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.EMail</td>
                                <td>@item.Phone</td>
                                <td>@item.AddDate</td>
                                <td>
                                    <a href="/Author/Edit/@item.ID"><button class="btn btn-outline-success">Edit</button></a>
                                    <button class="btn btn-outline-danger delete" id="@item.ID">Delete</button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).on("click", ".delete", function () {

        let id = $(this).attr("id");

        $.ajax({
            url: "/Author/Delete",
            type: "POST",
            data: { id: id },
            success: function (msg) {
                alert(msg);
                $("#" + id).fadeOut();
            },
            error: function (err) {
                alert("Failed!");
            }
        })
    })
</script>


