
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@model SportsNewsProject.Models.VM.AuthorVM

<div class=" table-responsive">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title">Authors</h4>
                <p class="card-category">All authors of this page</p>
            </div>
            <div class="card-body table-responsive">
                <table class="table table-hover">
                    <thead class="text-info">
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>EMail</th>
                            <th>Phone</th>
                            <th>Detail/Edit/Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        
                            <tr id="@Model.ID" class="text-center">
                                <td>@Model.ID</td>
                                <td>@Model.Name</td>
                                <td>@Model.Surname</td>
                                <td>@Model.EMail</td>
                                <td>@Model.Phone</td>
                                <td Model="td-actions">

                                    <button class="btn btn-outline-primary detay" id="@Model.ID">
                                        <i class="material-icons">description</i>
                                    </button>

                                    <a href="/Author/Edit/@Model.ID">
                                        <button class="btn btn-outline-success">
                                            <i class="material-icons">edit</i>
                                        </button>
                                    </a>

                                    @*<button class="btn btn-outline-danger delete" id="@item.ID">
                                            <i class="material-icons">close</i>
                                        </button>*@

                                    <span id="confirmDeleteSpan_@Model.ID" style="display:none">
                                        <span>Are you sure you want to delete?</span>
                                        <button type="submit" class="btn btn-outline-success delete" id="@Model.ID">Yes</button>
                                        <a href="#" class="btn btn-outline-danger" onclick="confirmDelete('@Model.ID',false)">No</a>
                                    </span>

                                    <span id="deleteSpan_@Model.ID">
                                        <a href="#" class="btn btn-outline-danger" onclick="confirmDelete('@Model.ID',true)"><i class="material-icons">close</i></a>
                                    </span>
                                </td>
                            </tr>
                        

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Author Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <span>Name:</span>
                    <span id="name"></span>
                </div>
                <div>
                    <span>Surname:</span>
                    <span id="surname"></span>
                </div>
                <div>
                    <span>EMail:</span>
                    <span id="email"></span>
                </div>
                <div>
                    <span>Phone:</span>
                    <span id="phone"></span>
                </div>
                <div>
                    <span>AddDate:</span>
                    <span id="adddate"></span>
                </div>
                <div>
                    <span>BirthDate:</span>
                    <span id="birthdate"></span>
                </div>
                <div>
                    <span>Categories:</span>
                    <ul id="categories">
                    </ul>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>


    $(document).on("click", ".detay", function () {
        let id = $(this).attr("id");
        fetch("/Author/Detail/" + id)
            .then((res) => res.json())
            .then((result) => {
                $("#name").html(result.name);
                $("#surname").html(result.surName);
                $("#email").html(result.eMail);
                $("#phone").html(result.phone);
                $("#adddate").html(result.addDate);
                $("#birthdate").html(result.birthDate);

                $("#categories li").remove();

                for (var i = 0; i < result.authorCategories.length; i++) {


                    $("#categories").append(`
                      <li>`+ result.authorCategories[i].category.categoryName + `</li>

                     `);
                }

                $("#detailmodal").modal();
            })
    })

    $(document).on("click", ".delete", function () {

        let id = $(this).attr("id");

        $.ajax({
            url: "/Author/Delete",
            type: "POST",
            data: { id: id },
            success: function (msg) {
                alert(msg);
                $("#" + id).fadeOut();
            },
            error: function (err) {
                alert("Failed!");
            }
        })
    })
</script>
